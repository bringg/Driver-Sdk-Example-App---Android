<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:background="?attr/selectableItemBackground">

    <RelativeLayout
        android:id="@+id/task_list_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="3dp"
        android:padding="5dp"
        android:clipToPadding="false">

        <TextView
            android:id="@+id/way_point_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/task_list_description_grey"
            android:textSize="12sp"
            tools:text="#LSOOSO" />

        <TextView
            android:id="@+id/customer_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/way_point_title"
            android:layout_alignStart="@+id/way_point_title"
            android:layout_marginTop="3dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="normal"
            tools:text="Customer Name" />

        <TextView
            android:id="@+id/task_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/customer_name"
            android:layout_alignStart="@+id/way_point_title"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:textSize="12sp"
            android:textStyle="normal"
            tools:text="task id" />

        <TextView
            android:id="@+id/way_point_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/task_id"
            android:layout_alignStart="@+id/way_point_title"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="6dp"
            android:textSize="12sp"
            android:textStyle="normal"
            tools:text="status" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>